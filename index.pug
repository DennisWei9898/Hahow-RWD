#app
  .navbar
    .icon
      img(src="https://hahow.in/static/media/logo-black.59fdbe30.svg")
    .nav_list.left
      span.explore
        i.fa.fa-fw.fa-th-large
        | 探索
      span.open
        i.fa.fa-pencil.fa-fw
        | 開課
      span.course
        img(src="https://hahow.in/static/media/mini-cart.0dba8458.svg")
        | 課程
    .nav_list.right
      h4.mycls 我的課程
      span.notifi
        i.fa.fa-bell-o.fa-fw
      img.profile
  
  .banner
    .center_banner
      img.img1(src="https://2017.awiclass.monoame.com/img/hahow_progress.png")
  .classes
    a.classbox(v-for="cls in classes" v-bind:href="'https://hahow.in/courses/'+cls._id" target="_blank")
      .teacher(v-bind:style="'background-image:url('+cls.owner.profileImageUrl+')'")
      .top
        .classpicture(v-bind:style="'background-image:url('+cls.coverImage.url+')'")
        .tag 募資中
        .bookbtn
          i.fa.fa-bookmark-o
      .bottom
        h1.classtitle {{cls.title}}
        p.intro(v-if="screen_size") 老師：{{cls.owner.name}}
        .texts
          .pricerow
            .prepice 預購價
              span.orange NT${{cls.preOrderedPrice}}
            .lastday 剩
              span.orange {{parseInt((new Date(cls.proposalDueTime)-new Date('2016/10/14'))/1000/60/60/24)}}天
          .progressbar
            .valuebar(v-bind:style="'width:'+100*(cls.numSoldTickets/cls.successCriteria.numSoldTickets)+'%'")
          .nowpeople 已募資
              span.orange {{cls.numSoldTickets}}/{{cls.successCriteria.numSoldTickets}}人

        .orangebar
